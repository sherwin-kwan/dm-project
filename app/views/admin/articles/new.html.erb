<h1>Create your article</h1>
<%= form_with model: @article, url: admin_articles_path do |form| %>
  <div class="form-fields">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="form-fields">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <%= form.submit "Save" %>
<% end %>
<%= link_to "Back to Menu", admin_articles_path %>