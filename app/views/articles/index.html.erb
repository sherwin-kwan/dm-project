<h1>Hello world!</h1>
<p>This is the homepage of the Developing Mastery project.</p>

<div data-controller="page">
  <%= turbo_frame_tag "testing" do %>
    <% @articles.each do |a| %>
      <div class="article">
        <h2><%= link_to(a.title, article_path(a)) %></h2>
        <p><%= a.body.truncate(200, separator: ' ') %>&nbsp;<%= link_to("Read More", article_path(a)) %></p>
      </div>
    <% end %>
  <% end %>

  <%= render 'pagination' %>
</div>