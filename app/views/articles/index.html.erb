<h1>Hello world!</h1>
<p>This is the homepage of the Developing Mastery project.</p>

<% @articles.each do |a| %>
  <div class="article">
    <h2><%= link_to(a.title, article_path(a)) %></h2>
    <p><%= sanitize a.body.truncate(200, separator: ' ') %>&nbsp;<%= link_to("Read More", article_path(a)) %></p>
  </div>
<% end %>

<%= render 'pagination', locals: {path_prefix: "articles", item: "article"} %>